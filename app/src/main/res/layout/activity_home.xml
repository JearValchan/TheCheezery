<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <ImageView
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/title"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/light"
        android:text="@string/out_menu"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="20dp">

        <Button
            android:text="@string/cold_drinks"
            android:fontFamily="@string/light"
            android:textColor="@color/dustyWhite"
            android:background="@drawable/first_gradient"
            android:layout_marginRight="2dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingVertical="@dimen/paddingButton"
            android:textSize="@dimen/buttonText"
            android:id="@+id/button_cold_drinks"
            />

        <Button
            android:text="@string/hot_drinks"
            android:fontFamily="@string/light"
            android:textColor="@color/dustyWhite"
            android:background="@drawable/first_gradient"
            android:layout_marginLeft="2dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingVertical="@dimen/paddingButton"
            android:textSize="@dimen/buttonText"
            android:id="@+id/button_hot_drinks"
            />

        <Button
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/second_gradient"
            android:fontFamily="@string/light"
            android:text="@string/sweets"
            android:textColor="@color/dustyWhite"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingVertical="@dimen/paddingButton"
            android:textSize="@dimen/buttonText"
            android:id="@+id/sweets"
            />

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/second_gradient"
            android:fontFamily="@string/light"
            android:text="@string/salties"
            android:textColor="@color/dustyWhite"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingVertical="@dimen/paddingButton"
            android:textSize="@dimen/buttonText"
            android:id="@+id/salties"
            />

        <Button
            android:text="@string/combos"
            android:fontFamily="@string/light"
            android:textColor="@color/dustyWhite"
            android:background="@drawable/tirth_gradient"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingVertical="@dimen/paddingButton"
            android:textSize="@dimen/buttonText"
            />

        <Button
            android:text="@string/personalized"
            android:fontFamily="@string/light"
            android:textColor="@color/dustyWhite"
            android:background="@drawable/tirth_gradient"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingVertical="@dimen/paddingButton"
            android:textSize="@dimen/buttonText"
            />

    </GridLayout>



</LinearLayout>